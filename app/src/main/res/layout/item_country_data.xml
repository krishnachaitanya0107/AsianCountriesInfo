<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/flagImageImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Name :"
        />

    <TextView
        android:id="@+id/countryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toTopOf="@id/nameTextView"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/capitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/countryNameTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:text="Capital :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/countryCapitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/capitalTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/regionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/capitalTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:text="Region :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/CountryRegionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/regionTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subRegionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/regionTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:text="Sub Region :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/CountrySubRegionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/subRegionTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/populationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CountrySubRegionTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:text="Population :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/CountryPopulationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/populationTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/bordersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/populationTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:text="Borders :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/CountryBordersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bordersTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/languagesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CountryBordersTextView"
        app:layout_constraintLeft_toRightOf="@id/flagImageImageView"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:text="Languages"
        />

    <TextView
        android:id="@+id/countryLanguagesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/languagesTextView"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@id/countryLanguagesTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>